<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.plone.reader">

<body>
  <div metal:fill-slot="main">
    <metal:main_macro define-macro="main">
      <metal:body define-macro="body_macro">
      <div tal:define="data view/update">
	  <ul>
		<span tal:omit-tag="python: True"  tal:repeat="fffolder data">
			<li>
				<b tal:content="fffolder/title"></b> - <span tal:content="fffolder/Description"></span>
				<ul>
					<span tal:omit-tag="python: True"  tal:repeat="feed fffolder/contentItems">
						<li>
							<b tal:content="structure feed"></b>
						</li>
					</span>	
				</ul>
				<tbody valign="top">
					<tr tal:repeat="child feed">
						<td tal:content="python:toLocalizedTime(child['updated_date'], long_format=0)" class="feed-date"> 2006-11-10 </td>
						<td><a tal:attributes="href child/url" tal:content="structure child/title"> My Title </a>
							<div tal:condition="child/summary" tal:content="structure child/summary"> My summary </div>
						</td>
					</tr>
				</tbody>
			</li>
		</span>
	  <ul>
	  
	  </div>
      </metal:body>
    </metal:main_macro>
  </div>
</body>
</html>